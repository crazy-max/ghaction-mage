  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^13.7.2",
    "@types/download": "^6.2.4",
    "jest": "^25.1.0",
    "jest-circus": "^25.1.0",
    "jest-runtime": "^25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5",
    "typescript-formatter": "^7.2.2"
